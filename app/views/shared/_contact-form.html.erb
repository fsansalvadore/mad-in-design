<form class="form-contact comment_form" action="#" id="commentForm">
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                <input class="form-control" name="name" id="name" type="text" placeholder="Nome *" required>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <input class="form-control" name="email" id="email" type="email" placeholder="Email *" required>
            </div>
        </div>
        <div class="col-12">
            <div class="form-group">
                <input class="form-control" name="website" id="website" type="text" placeholder="Telefono">
            </div>
        </div>
        <div class="col-12">
            <div class="form-group">
                <textarea class="form-control w-100" name="comment" id="comment" cols="30" rows="9" placeholder="Messaggio *" required></textarea>
            </div>
        </div>
        <div class="col-12 font-small">
          <p>* Campi obbligatori</p>
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="button button-contactForm background1">Invia messaggio</button>
    </div>
</form>
<%= form_for @contact, url: contatti_path, remote: true, class: "form-contact comment_form" do |f| %>
<% if @contact.errors.any? %>
  <div id="error_explanation">
    <h3><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

    <ul>
    <% @contact.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
  <div>
      <%= f.label :nome %>
      <%= f.text_field  :nome, required: true, class: "contact-form-text-area", placeholder: "Nome" %></br>

      <%= f.label :email %>
      <%= f.text_field :email, required: true, class: "contact-form-text-area", placeholder: "Email" %></br>

    <%= f.label :messaggio %>
    <%= f.text_area :messaggio, rows: 8, cols: 40, required: true, class: "contact-form-text-area",
                      placeholder: "Scrivi un messaggio"%>

    <div class= "hidden">
      <%= f.label :nickname %>
      <%= f.text_field :nickname, :hint => 'Leave this field blank!' %>
    </div>
    <div class="form-checkbox-terms">
      <input type="checkbox" required name="terms"> <span>Dichiaro di aver letto e accettato l'<%= link_to "informativa sulla privacy", privacy_cookie_policy_path %>.</span></br>
    </div>

    <%= f.submit 'Invia Messaggio', class: 'submit-button w-button btn-wide' %>
  </div>
<% end %>

